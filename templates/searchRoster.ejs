<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Search Team Roster</h1>
        <form action="/teamRoster" method="POST">
            <label for="teamDropdown">Select Team:</label>
            <select id="teamDropdown" name="teamName" required>
                <option value="" disabled selected>Select a team</option>
                <% teams.forEach(team => { %>
                    <option value="<%= team.name %>"><%= team.name %></option>
                <% }); %>
            </select>
            <button type="submit">View Roster</button>
        </form>
        <div class="nav-buttons">
            <a href="/">Home</a>
        </div>
    </div>
</body>
</html>